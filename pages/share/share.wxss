/* pages/share/share.wxss */
.topbar {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  background-color: rgba(136, 230, 46, 100);
  color: rgba(255, 255, 255, 100);
  font-size: 40rpx;
  font-family: Microsoft Yahei;
}
.user{
  top: 80rpx;
  width: 100%;
  height:180rpx;
  padding-top: 60rpx;
  padding-left: 50rpx;
  display:flex;
  background-color: rgba(255,255,255);
}
.headphoto{
  background-color: rgba(42, 143, 247);
  width: 140rpx;
  height: 140rpx;
}
.user_info{
  flex: 1;
  height:140rpx;
}
.user .user_name{
  line-height: 70rpx;
  font-size: 40rpx;
  color: rgb(68,68,68);
  padding-left:30rpx;
}
.user .user_workcount{
  padding-left: 30rpx;
  line-height: 70rpx;
  font-size: 30rpx;
  color: rgb(154,154,154);
}

.wrap {
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.wrap .img-wrap {
  font-size: 30rpx;
  color: #33373E;
  margin-bottom: 10rpx;
}
.wrap .img-wrap .txt {
  margin-bottom: 20rpx;
}
.wrap .img-wrap .imglist {
  display: flex;
  flex-wrap: wrap;
}
.wrap .img-wrap .imglist .item {
  width: 150rpx;
  height: 150rpx;
  margin-right: 22rpx;
  margin-bottom: 10rpx;
  position: relative;
}
.wrap .img-wrap .imglist .last-item {
  width: 150rpx;
  height: 150rpx;
  text-align: center;
  line-height: 146rpx;
  border: 2rpx dashed #8B97A9;
  box-sizing: border-box;
}
.wrap .img-wrap .imglist .item image {
  width: 100%;
  height: 100%;
}
.wrap .img-wrap .imglist .item .delete {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: -14rpx;
  right: -12rpx;
}