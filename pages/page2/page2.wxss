/* pages/page2/page2.wxss */
.topbar{
  display: flex;
  width: 100%;
  height: 80rpx;
  background-color: rgba(136,230,46,100);
  color: rgba(255,255,255,100);
  font-size: 40rpx;
  font-family: Microsoft Yahei;
}
.box{
  width: 10%;
  height:80rpx;
  line-height: 80rpx;
  text-align: center;
}
.box_h{
  text-align: center;
  line-height: 80rpx;
  flex:1;
  font-weight: 700;
}

/* user */
.user{
  top: 80rpx;
  width: 100%;
  height:180rpx;
  padding-top: 60rpx;
  padding-left: 50rpx;
  display:flex;
  box-shadow: 0rpx 10rpx 20rpx rgb(190,190,190);
  background-color: rgba(255,255,255);
}
.headphoto{
  background-color: rgba(42, 143, 247);
  width: 140rpx;
  height: 140rpx;
}
.user_info{
  flex: 1;
  height:140rpx;
}
.user .user_name{
  line-height: 70rpx;
  font-size: 40rpx;
  color: rgb(68,68,68);
  padding-left:30rpx;
}
.user .user_workcount{
  padding-left: 30rpx;
  line-height: 70rpx;
  font-size: 30rpx;
  color: rgb(154,154,154);
}

.card{
  height: 130rpx;
  border: 1px solid rgba(187, 187, 187, 100);
  display: flex;
  align-items: center;
  justify-content: center;
}
.login{
  width:180rpx;
  height:100rpx;
  text-align: center;
  box-shadow: 0px 2px 6px 0px rgba(0, 0, 0, 0.4);
  border: 1px solid rgba(187, 187, 187, 100);
  font-size: 32rpx;
}